<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/translate_scan_result_barcode"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/recycler_item_bg1"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/translate_scan_result_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/recycler_item_bg2"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/translate_scan_result_modle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/recycler_item_bg1"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/translate_scan_result_weight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/recycler_item_bg2"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/translate_scan_result_batch_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/recycler_item_bg1"
        android:gravity="center"
        android:textSize="14sp" />

</LinearLayout>