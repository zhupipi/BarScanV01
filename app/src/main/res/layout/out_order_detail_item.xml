<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"

    >

    <TextView
        android:id="@+id/out_order_detial_good"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/recycler_item_bg1"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/out_order_detial_modle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="14sp"
        android:background="@drawable/recycler_item_bg2"
         />

    <TextView
        android:id="@+id/out_order_detial_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textSize="14sp"
        android:background="@drawable/recycler_item_bg1"/>

    <TextView
        android:id="@+id/out_order_detial_actcount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textSize="14sp"
        android:background="@drawable/recycler_item_bg2"/>

    <TextView
        android:id="@+id/out_order_detial_customerName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.5"
        android:gravity="center"
        android:textSize="14sp"
        android:background="@drawable/recycler_item_bg1"/>

</LinearLayout>