<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/login_yfgg"
        android:layout_marginStart="27dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="64dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="27dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/app_login_title"
        android:gravity="center"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/delete_button1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:text="@string/app_login_name"
        android:textSize="17sp"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/user_password_edit"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/uer_name_edit"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp" />

    <AutoCompleteTextView
        android:id="@+id/uer_name_edit"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:hint="请输入ERP用户名"
        android:maxLines="1"
        android:textSize="17sp"
        android:layout_marginEnd="6dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/user_password_edit"
        android:layout_marginStart="13dp"
        app:layout_constraintRight_toRightOf="@+id/user_password_edit"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="14dp"
        app:layout_constraintTop_toTopOf="@+id/delete_button1"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="6dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="72dp"
        android:layout_height="41dp"
        android:text="@string/app_login_paswd"
        android:gravity="center"
        android:textSize="17sp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="29dp"
        app:layout_constraintRight_toLeftOf="@+id/user_password_edit"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="29dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/user_password_edit"
        android:layout_width="166dp"
        android:layout_height="39dp"
        android:gravity="center_vertical"
        android:textSize="17sp"
        android:inputType="textPassword"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="29dp"
        app:layout_constraintRight_toRightOf="@+id/login_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="29dp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/app_lgoin_button_login"
        android:layout_marginStart="26dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="26dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp" />

    <ImageButton
        android:id="@+id/delete_button1"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:srcCompat="@android:drawable/ic_input_delete"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/user_password_edit"
        app:layout_constraintRight_toRightOf="@+id/delete_button2"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="26dp"
        app:layout_constraintLeft_toLeftOf="@+id/delete_button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/delete_button2"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginEnd="1dp"
        app:srcCompat="@android:drawable/ic_input_delete"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="2dp"
        app:layout_constraintRight_toRightOf="@+id/login_button"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/delete_button1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/uer_name_edit"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="1dp" />

</android.support.constraint.ConstraintLayout>
