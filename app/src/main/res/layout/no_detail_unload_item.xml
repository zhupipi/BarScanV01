<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/no_detail_unload_barcode"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/recycler_item_bg1"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/no_detail_unload_good"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/recycler_item_bg2"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/no_detail_unload_modle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/recycler_item_bg1"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/no_detail_unload_act_weight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/recycler_item_bg2"
        android:gravity="center"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/no_detail_unload_customerName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.5"
        android:background="@drawable/recycler_item_bg1"
        android:gravity="center"
        android:textSize="14sp" />


</LinearLayout>